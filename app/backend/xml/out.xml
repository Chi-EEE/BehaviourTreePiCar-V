<Root id="main">
    <Sequence>
        <Task name="Move">
            <Action type="Turn" angle="180" />
            <Action type="Move" ms="10" />
            <Action type="Direction" direction_type="forward" />
            <Action type="Direction" direction_type="backward" />
            
        </Task>
        <Condition type="NearbyPoints" min_angle="0" max_angle="0" distance="200" />
        <Wait ms="5000">
        </Wait>
        <LogMessage text="Waited 5 seconds" />
        <ToRoot id="abc"/>

        <Invert>
            <Fail />
            <Succeed />
        </Invert>
        <Repeat count="2" break_on_fail="false">
        </Repeat>
    </Sequence>
